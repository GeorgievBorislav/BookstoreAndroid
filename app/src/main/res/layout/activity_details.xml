<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView

        android:id="@+id/detailQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question Goes Here"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp" />

    <LinearLayout
        android:id="@+id/yes_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/TextRate"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp">
    <ImageView
        android:id="@+id/buttonNo"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:src="@mipmap/no_button"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/buttonYes"
        android:layout_alignEnd="@+id/textView4" />

    <ImageView
        android:id="@+id/buttonYes"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/yes_button"
        android:layout_marginBottom="57dp"

        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/textView3" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:indeterminate="false"
        android:max="5"
        android:layout_alignParentBottom="true"
         />

    <TextView
        android:id="@+id/TextRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Rate the dificulty of the question"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/TextRate" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dificult"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3" />

</RelativeLayout>